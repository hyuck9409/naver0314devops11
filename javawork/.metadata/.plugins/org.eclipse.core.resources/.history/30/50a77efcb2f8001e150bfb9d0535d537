package day0408;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
       Scanner sc=new Scanner(System.in);
       
       int H=sc.nextInt();
       int M=sc.nextInt();
       if(H==0) {
    	   H=24;
       }
       M=(M-45);
//       if(M<0) {
//    	   H=H-1;
//       }
       System.out.println(H+":"+Math.abs(M));
    }
}